# Database
# Local dev: port 5435 (docker run -p 5435:5432 postgres:16-alpine ...)
# Docker-compose: postgresql://callanalytics:password@db:5432/callanalytics
DATABASE_URL=postgresql://callanalytics:password@localhost:5435/callanalytics

# OpenAI (GPT-4 + Whisper API fallback)
OPENAI_API_KEY=sk-...

# Whisper
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
WHISPER_LANGUAGE=ru

# pyannote (requires HuggingFace token)
HF_TOKEN=hf_...

# Limits
MAX_FILE_SIZE_MB=500
MAX_BATCH_SIZE=20
MIN_DURATION_SEC=3
MAX_DURATION_SEC=14400
AUDIO_RETENTION_DAYS=7

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173

# Data paths
UPLOADS_DIR=/app/data/uploads
AUDIO_DIR=/app/data/audio

# Frontend (build-time)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/api/v1/ws
